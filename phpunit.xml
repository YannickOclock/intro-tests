<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.0/phpunit.xsd" bootstrap="vendor/autoload.php" colors="true" beStrictAboutOutputDuringTests="false" cacheDirectory=".phpunit.cache" requireCoverageMetadata="false">
  <testsuites>
    <testsuite name="Test Suite">
      <directory>./tests</directory>
    </testsuite>
  </testsuites>
  <source>
    <include>
      <directory>./app</directory>
      <directory>./mvc</directory>
    </include>
    <exclude>
      <directory>./vendor</directory>
    </exclude>
  </source>
  <php>
    <env name="APP_ENV" value="testing" force="true" />
  </php>
</phpunit>
